<!doctype html>
<html>

<%- include("../public/head.ejs",{
title:"发布项目"
}) %>
<link rel="stylesheet" href="../../css/user/release-project.css">


</head>

<body>
<%- include("../public/header.ejs",{active:0}) %>
    <div class="content">
        <span class="layui-breadcrumb">
            <a href="../../views/index/index.html">首页</a>
            <a href="../../views/user/my-account.html">会员中心</a>
        </span>
        <div class="project-form">
            <div class="project-title">
                <span>发布项目</span>
            </div>
            <div class="form-details">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <div class="project-img pull-left">项目图片:</div>
                        <div class="image pull-left">
                            <img src="../../images/blo_pic.png" alt="">
                        </div>
                        <div class="btn pull-left">
                            <input type="file" id="hidden">
                            <a href="jacascript: ;">选择文件</a>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">项目名称:</label>
                        <div class="layui-input-block">
                            <input type="text" name="title" required  lay-verify="required" placeholder="请输入项目名称" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item address">
                        <label class="layui-form-label">地址:</label>
                        <div class="layui-input-block ">
                            <select name="city" lay-verify="required">
                                <option value="">广东省</option>
                            </select>
                        </div>
                        <div class="layui-input-block city">
                            <select name="city" lay-verify="required">
                                <option value="">广州市</option>
                            </select>
                        </div>
                        <div class="layui-input-block district">
                            <select name="city" lay-verify="required">
                                <option value="">海珠区</option>
                            </select>
                        </div>
                        <div class="layui-input-block street">
                            <input type="text" name="title" required  lay-verify="required" placeholder="请输入详细街道地址" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item select-item">
                        <label class="layui-form-label">所属行业:</label>
                        <div class="layui-input-block">
                            <select name="city" lay-verify="required">
                                <option value="">建筑建材</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item select-item">
                        <label class="layui-form-label">项目性质:</label>
                        <div class="layui-input-block">
                            <select name="city" lay-verify="required">
                                <option value="">新建项目</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item select-item">
                        <label class="layui-form-label">项目阶段:</label>
                        <div class="layui-input-block">
                            <select name="city" lay-verify="required">
                                <option value="">筹建</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">项目用途:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="sex" value="生产经营性项目" title="生产经营性项目">
                            <input type="radio" name="sex" value="非生产经营性项目" title="非生产经营性项目" checked>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">项目所属权:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="sex2" value="自有项目" title="自有项目">
                            <input type="radio" name="sex2" value="代理项目" title="代理项目" checked>
                        </div>
                    </div>
                    <div class="layui-form-item select-item ">
                        <label class="layui-form-label">融资方式:</label>
                        <div class="layui-input-block">
                            <select name="city" lay-verify="required">
                                <option value="">债权融资</option>
                            </select>
                        </div>
                    </div>
                    <div class="financing">
                        <div class="pull-left">可承担最高利息: <input type="text" value="">%/年</div>
                        <div class="pull-left">资金占有时长: <input type="text" value="">%/年</div>
                        <div class="pull-left">还款来源: <input type="text" value=""></div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">融资用途:</label>
                        <div class="layui-input-block">
                            <input type="text" name="title" required  lay-verify="required" placeholder="请输入融资用途" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">风控要求:</label>
                        <div class="layui-input-block">
                            <input type="checkbox" name="" title="股权质烟" lay-skin="primary" checked>
                            <input type="checkbox" name="" title="固定资产抵押" lay-skin="primary">
                            <input type="checkbox" name="" title="保险" lay-skin="primary" >
                        </div>
                    </div>
                    <div class="layui-form-item money">
                        <label class="layui-form-label">融资金额:</label>
                        <div class="layui-input-block"id="money-num">
                            <input  type="text" name="title" required  lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-block " id="money-unit">
                            <select name="city" lay-verify="required">
                                <option value="">万元</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">融资期限:</label>
                        <div class="layui-input-block">
                            <input type="text" name="title" required  lay-verify="required" placeholder="请输入融资截止日期" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">项目概况:</label>
                        <div class="layui-input-block">
                            <textarea name="desc" placeholder="" class="layui-textarea"></textarea>
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">项目优势:</label>
                        <div class="layui-input-block">
                            <textarea name="desc" placeholder="" class="layui-textarea"></textarea>
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">项目详情:</label>
                        <div class="layui-input-block">
                            <textarea name="desc" placeholder="" class="layui-textarea"></textarea>
                        </div>
                    </div>
                    <button class="layui-btn">发布</button>
                </form>
            </div>
        </div>
    </div>



<%- include("../public/footer.ejs") %>
</body>

</html>