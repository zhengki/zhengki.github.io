<!doctype html>
<html>

<%- include("../public/head.ejs",{
title:"新增地址"
}) %>
<link rel="stylesheet" href="../../css/user/add-address.css">


</head>

<body>

<%- include("../public/header.ejs",{active:0}) %>
    <div class="content">
        <div class="breadcrumb">
            <span class="layui-breadcrumb">
            <a href="../../views/index/index.html">首页</a>
            <a href="#">会员中心</a>
        </span>
        </div>
        <div class="clear">
            <%- include("../public/sideBarLeft.ejs",{
				active:[0,3]
			}) %>
            <div class="sideBarRight pull-left">
                <div class="talk-nav">
                    <span class="active first"><a href="">新增地址</a></span>
                </div>
                <div class="project">
                    <form class="layui-form" action="">
                        <div class="layui-form-item areas">
                            <label class="layui-form-label"><span class="font-red">*</span>所在地区:</label>
                            <div class="layui-input-block area">
                                <select name="city" lay-verify="required">
                                    <option value="">中国大陆</option>
                                    <option value="0"></option>
                                    <option value="1">上海</option>
                                    <option value="2">广州</option>
                                    <option value="3">深圳</option>
                                    <option value="4">杭州</option>
                                </select>
                            </div>
                            <div class="layui-input-block prov">
                                <select name="city" lay-verify="required">
                                    <option value="">请选择省区</option>
                                    <option value="0"></option>
                                    <option value="1">上海</option>
                                    <option value="2">广州</option>
                                    <option value="3">深圳</option>
                                    <option value="4">杭州</option>
                                </select>
                            </div>
                        </div>
                        <div class="layui-form-item layui-form-text">
                            <label class="layui-form-label"><span class="font-red">*</span>详细地址:</label>
                            <div class="layui-input-block">
                                <textarea name="desc" placeholder="请输入详细街道地址" class="layui-textarea"></textarea>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label"><span class="font-red">*</span>邮政编码:</label>
                            <div class="layui-input-block">
                                <input type="text" name="title" required  lay-verify="required" placeholder="请输入邮政区号" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label"><span class="font-red">*</span>收件人:</label>
                            <div class="layui-input-block">
                                <input type="text" name="title" required  lay-verify="required" placeholder="请输入收件人姓名" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label"><span class="font-red">*</span>手机号码:</label>
                            <div class="layui-input-block">
                                <input type="text" name="title" required  lay-verify="required" placeholder="请输入收件人手机号码" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <input type="submit" value="保存">
                    </form>
                </div>
            </div>
        </div>
    </div>



    <%- include("../public/footer.ejs") %>





</body>

</html>